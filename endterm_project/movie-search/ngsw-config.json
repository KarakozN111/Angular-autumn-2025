{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",

  "assetGroups": [
    {
      "name": "app-shell",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/index.html",
          "/*.css",
          "/*.js",
          "/manifest.webmanifest",
          "/favicon.ico"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.(png|jpg|jpeg|svg|gif|webp|avif|woff|woff2|ttf|otf)"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "movies-api",
      "urls": ["https://www.omdbapi.com/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "youtube-api",
      "urls": ["https://www.googleapis.com/youtube/v3/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "1d",
        "timeout": "5s"
      }
    }
  ]
}
